    "lib/Rules/Required.ts",
    "lib/RulesCollection.ts",
    "lib/Validator.ts",
    "tests/Rules/NotUndefinedOrNan.spec.ts",
    "tests/Rules/Required.spec.ts",
    "tests/RulesCollection.spec.ts",
    "tests/Validator.spec.ts"
  ],
  "exclude": []
}
